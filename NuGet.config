<?xml version="1.0" encoding="utf-8"?>
<!--
  This NuGet.config prevents Windows-specific paths (like "C:\Program Files (x86)\Microsoft Visual Studio\Shared\NuGetPackages")
  from being cached in project.assets.json files, which causes build failures in Linux Docker containers.

  Key settings:
  - Uses only nuget.org as package source
  - Clears fallback package folders (Visual Studio shared cache)
  - Uses default user package folder instead of Visual Studio's shared location
-->
<configuration>
  <packageSources>
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>
  <config>
    <!-- Empty value uses default: %USERPROFILE%\.nuget\packages on Windows, ~/.nuget/packages on Linux -->
    <add key="globalPackagesFolder" value="" />
  </config>
  <fallbackPackageFolders>
    <!-- Clear any fallback folders to prevent Windows path issues on Linux -->
    <clear />
  </fallbackPackageFolders>
</configuration>
